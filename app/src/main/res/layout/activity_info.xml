<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info"
    android:background="@drawable/redbg1">

    <TextView
        android:id="@+id/des1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debut Series  :"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/mainImageView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/debut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:paddingTop="20dp"
        android:text="Ex"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@+id/des1"
        app:layout_constraintTop_toBottomOf="@id/mainImageView" />

    <TextView
        android:id="@+id/des2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:text="Produced       :"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/des1" />

    <TextView
        android:id="@+id/produced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Ex"
        android:layout_marginLeft="10sp"
        app:layout_constraintLeft_toRightOf="@+id/des2"
        app:layout_constraintTop_toBottomOf="@id/des1"/>
    <TextView
        android:id="@+id/des3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designer         :"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20sp"
        app:layout_constraintTop_toBottomOf="@+id/des2"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/design"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Ex"
        android:layout_marginLeft="10sp"
        app:layout_constraintLeft_toRightOf="@+id/des3"
        app:layout_constraintTop_toBottomOf="@id/des2"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nama mobil"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingTop="10sp"
        app:layout_constraintBottom_toTopOf="@+id/mainImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mainImageView"
        android:layout_width="345dp"
        android:layout_height="276dp"
        app:srcCompat="@drawable/hw_rodgerdodger"
        app:layout_constraintTop_toBottomOf="@+id/nama"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <TextView
        android:id="@+id/des4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description    :"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20sp"
        app:layout_constraintTop_toBottomOf="@+id/des3"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:text="example example example example example example example example example example example example example"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/des4" />


</androidx.constraintlayout.widget.ConstraintLayout>