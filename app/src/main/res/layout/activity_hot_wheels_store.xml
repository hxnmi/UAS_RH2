<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_opacity"
    android:orientation="vertical"
    tools:context=".hot_wheels_store">
  <TextView
      android:id="@+id/hotwheelsstoretitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:text="Hot Wheels Store"
    android:textSize="24sp"
    android:textColor="@color/white"
    android:background="@drawable/hw_store_button"
    android:textAlignment="center"
    android:layout_marginHorizontal="50dp"
      android:layout_marginBottom="20dp"
      android:layout_marginVertical="30dp"
    android:fontFamily="@font/heavyheap"
    android:paddingVertical="15dp"
    app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/HotWheelsStore"/>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/HotWheelsStore"
      android:layout_width="match_parent"
      android:layout_height="550dp"
      app:layout_constraintTop_toBottomOf="@id/hotwheelsstoretitle"
      android:layout_marginTop="30dp">

  </androidx.recyclerview.widget.RecyclerView>

  <Button
      app:layout_constraintTop_toBottomOf="@id/HotWheelsStore"
      android:id="@+id/checkOut"
      android:layout_width="match_parent"
      android:layout_height="90dp"
      android:text="Checkout"
      android:paddingBottom="45dp"
      android:textSize="24sp"
      android:background="@drawable/hw_store_button"
      android:fontFamily="@font/heavyheap"
      android:textColor="@color/white"
      android:layout_gravity="center"
      android:gravity="center"
      />
</androidx.constraintlayout.widget.ConstraintLayout>