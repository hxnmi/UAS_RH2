<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background_opacity"
    tools:context=".main_menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOTWHEELS\nRETAIL's HUB"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:textSize="65sp"
        android:layout_above="@+id/EditEmail"
        android:shadowColor="@color/black"
        android:shadowRadius="20.0"
        android:fontFamily="@font/heavyheap"
        android:textColor="@color/red"
        android:paddingBottom="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"/>
    <Button
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:text="Hot Wheels Store"
        android:textSize="30sp"
        android:background="@drawable/hw_store_button"
        android:fontFamily="@font/heavyheap"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="75dp"
        android:onClick="toHWStore"
        />

    <Button
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/hw_store_button"
        android:fontFamily="@font/heavyheap"
        android:gravity="center"
        android:text="Tips for Collectors"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:onClick="toTables"/>
    <Button
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/hw_store_button"
        android:fontFamily="@font/heavyheap"
        android:gravity="center"
        android:text="About Dev"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:onClick="toAbout"/>

</LinearLayout>