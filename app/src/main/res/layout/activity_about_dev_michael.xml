<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about_dev_michael"
    android:background="@drawable/background_opacity">

    <TextView
        android:id="@+id/DevInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="DEVELOPER INFO"
        android:textAlignment="center"
        android:fontFamily="@font/heavyheap"
        android:shadowColor="@color/black"
        android:shadowRadius="20.0"
        android:textSize="50sp"
        android:textColor="@color/red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/MichaelPic"
        android:src="@drawable/dev_michael"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DevInfo" />

    <TextView
        android:id="@+id/michael"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Michael Indrawan"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowRadius="20"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/MichaelPic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="sans-serif-condensed"
        android:text="NIM\nA11.2020.12434 \n\nKelas\n43UG \n\nEmail\n111202012434@mhs.dinus.ac.id"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/michael" />

</androidx.constraintlayout.widget.ConstraintLayout>